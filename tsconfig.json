{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "typeRoots": ["./node_modules/@types/", "./types"],
    "paths": {
      "vue-simple-uploader": ["./src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "example/**/*.ts",
    "example/**/*.d.ts",
    "example/**/*.tsx",
    "example/**/*.vue",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
